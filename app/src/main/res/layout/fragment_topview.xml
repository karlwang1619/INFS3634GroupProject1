<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Gavin Chiem"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userBenchTopMedal"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/userSquatTopMedal"
        app:layout_constraintTop_toTopOf="@+id/userSquatTopMedal"
        app:srcCompat="@drawable/bench1" />

    <ImageView
        android:id="@+id/userOHPTopMedal"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/userDeadliftTopMedal"
        app:layout_constraintTop_toTopOf="@+id/userDeadliftTopMedal"
        app:srcCompat="@drawable/bench1" />

    <ImageView
        android:id="@+id/userDeadliftTopMedal"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/userBenchTopMedal"
        app:layout_constraintTop_toTopOf="@+id/userBenchTopMedal"
        app:srcCompat="@drawable/bench1" />

    <ImageView
        android:id="@+id/userSquatTopMedal"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/userName"
        app:layout_constraintTop_toTopOf="@+id/userName"
        app:srcCompat="@drawable/bench1" />
</androidx.constraintlayout.widget.ConstraintLayout>