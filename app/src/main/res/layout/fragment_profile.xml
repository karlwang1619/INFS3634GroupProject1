                app:srcCompat="@drawable/bench5" />

            <ImageView
                android:id="@+id/deadlift1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toEndOf="@+id/textView38"
                app:layout_constraintTop_toBottomOf="@+id/bench1"
                app:srcCompat="@drawable/deadlift1" />

            <ImageView
                android:id="@+id/deadlift2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/deadlift1"
                app:layout_constraintTop_toTopOf="@+id/deadlift1"
                app:srcCompat="@drawable/deadlift2" />

            <ImageView
                android:id="@+id/deadlift3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/deadlift2"
                app:layout_constraintTop_toTopOf="@+id/deadlift2"
                app:srcCompat="@drawable/deadlift3" />

            <ImageView
                android:id="@+id/deadlift4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@+id/deadlift3"
                app:layout_constraintTop_toTopOf="@+id/deadlift3"
                app:srcCompat="@drawable/deadlift4" />

            <ImageView
                android:id="@+id/ohp1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toEndOf="@+id/textView39"
                app:layout_constraintTop_toBottomOf="@+id/deadlift1"
                app:srcCompat="@drawable/ohp1" />

            <ImageView
                android:id="@+id/deadlift5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@+id/deadlift4"
                app:layout_constraintTop_toTopOf="@+id/deadlift4"
                app:srcCompat="@drawable/deadlift5" />

            <ImageView
                android:id="@+id/ohp2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@+id/ohp1"
                app:layout_constraintTop_toTopOf="@+id/ohp1"
                app:srcCompat="@drawable/ohp2" />

            <ImageView
                android:id="@+id/ohp3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/ohp2"
                app:layout_constraintTop_toTopOf="@+id/ohp2"
                app:srcCompat="@drawable/ohp3" />

            <ImageView
                android:id="@+id/ohp4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/ohp3"
                app:layout_constraintTop_toTopOf="@+id/ohp3"
                app:srcCompat="@drawable/ohp4" />

            <ImageView
                android:id="@+id/ohp5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@+id/ohp4"
                app:layout_constraintTop_toTopOf="@+id/ohp4"
                app:srcCompat="@drawable/ohp5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

