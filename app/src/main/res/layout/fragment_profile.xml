            <ImageView
                android:id="@+id/bench3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/bench2"
                app:layout_constraintTop_toTopOf="@+id/bench2"
                app:srcCompat="@drawable/bench3" />

            <ImageView
                android:id="@+id/bench4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/bench3"
                app:layout_constraintTop_toTopOf="@+id/bench3"
                app:srcCompat="@drawable/bench4" />

            <ImageView
                android:id="@+id/bench5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
