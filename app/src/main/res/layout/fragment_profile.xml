            <ImageView
                android:id="@+id/sqaut2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                app:layout_constraintStart_toEndOf="@+id/squat1"
                app:layout_constraintTop_toTopOf="@+id/squat1"
                app:srcCompat="@drawable/squat2"
                tools:visibility="invisible" />

            <ImageView
                android:id="@+id/squat3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                app:layout_constraintStart_toEndOf="@+id/sqaut2"
