            <ImageView
                android:id="@+id/squat4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                app:layout_constraintStart_toEndOf="@+id/squat3"
                app:layout_constraintTop_toTopOf="@+id/squat3"
                app:srcCompat="@drawable/squat5"
                tools:visibility="invisible" />

            <ImageView
